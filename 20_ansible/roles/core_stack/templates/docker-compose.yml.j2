version: "3.9"

services:
  vaultwarden:
    image: {{ vaultwarden_image }}
    container_name: vaultwarden
    restart: unless-stopped
    env_file: vaultwarden.env
    volumes:
      - ./vaultwarden:/data
    ports:
      - "127.0.0.1:8222:80"

  n8n:
    image: {{ n8n_image }}
    container_name: n8n
    restart: unless-stopped
    env_file: n8n.env
    volumes:
      - ./n8n:/home/node/.n8n
    ports:
      - "127.0.0.1:5678:5678"

  mealie:
    image: {{ mealie_image }}
    container_name: mealie
    restart: unless-stopped
    env_file: mealie.env
    volumes:
      - ./mealie:/app/data
    ports:
      - "127.0.0.1:9925:9000"
