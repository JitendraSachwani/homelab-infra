services:
  remotion:
    image: {{ market_diaries_renderer_image }}
    container_name: remotion
    command: >
      npx remotion lambda serve
      --host 0.0.0.0
      --port 3000
    ports:
      - "{{ market_diaries_renderer_port }}:3000"
    volumes:
      - "{{ market_diaries_renderer_mount_path }}:/data"
    restart: unless-stopped
